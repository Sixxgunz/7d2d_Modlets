<?xml version="1.0" encoding="utf-8"?>
<configs>
	<!-- These are NOT default values - these settings have all been modified to suit my server-->
	<!-- This was created to lower the mark up prices to sell weapons for reasonable value -->
	<!-- Increased inventory amounts for traders -->
	<!-- Removed Rented and Player placed vending machines from being useable to exploit for now -->
	
	<!--Adjust Trader Markup when purchasing and Markdown when selling to Traders-->
	<set xpath="/traders[@currency_item='casinoCoin']/@buy_markup">2.0</set>
	<set xpath="/traders[@currency_item='casinoCoin']/@sell_markdown">0.5</set>
	<set xpath="/traders[@currency_item='casinoCoin']/@quality_mod">1,6</set>
	<!--Increase or decrease minimum and maximum amount of items carried by trader-->
	<set xpath="/traders/trader_info[@id='1']/@min_inventory">500</set>
	<set xpath="/traders/trader_info[@id='1']/@max_inventory">1500</set>
	<!--Honestly not sure what this does, haven't looked it up yet-->
	<set xpath="/traders/trader_info[@id='1']/@min_items_swapped">500</set>
	<set xpath="/traders/trader_info[@id='1']/@max_items_swapped">1500</set>
	<!--Adjust Trader Open and Closed Times-->
	<set xpath="/traders/trader_info[@id='1']/@open_time">4:05</set>
	<set xpath="/traders/trader_info[@id='1']/@close_time">21:50</set>
	<!--Adjust how often Traders reset - in game days-->
	<set xpath="/traders/trader_info[@id='1']/@reset_interval">1</set>
	
	<!-- Player Owned Vending Machines Not useable until exploit fixed.-->
	<set xpath="/traders/trader_info[@id='3']/@player_owned">false</set>
	
	<!-- Vending Machines spawned in world. -->
	<set xpath="/traders/trader_info[@id='4']/@reset_interval">1</set>
	<set xpath="/traders/trader_info[@id='4']/@override_buy_markup">1.0</set>
	<set xpath="/traders/trader_info[@id='4']/trader_items/@count">500,1500</set>
	
	<!-- Rented Vending Machines - Not rentable until exploit fixed.-->
	<set xpath="/traders/trader_info[@id='5']/@rentable">false</set>
	
</configs>
